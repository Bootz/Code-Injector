{

    "manifest_version": 2,
    "name": "Web Injector",
    "version": "1.0.0",

    "description": "Web Injector",
    "permissions": [ "<all_urls>", "tabs", "activeTab", "storage" ],

    "browser_action": {
        "default_icon": "icons/icon-def.png",
        "default_title": "Web Injector",
        "default_popup": "browser_action/index.html"
    },

    "background": {
        "scripts": ["main.js"]
    },

    "options_ui": {
        "page": "options_ui/index.html"
    }

}
